
@model List<BusPruebaFront.Models.Clientes>
@{

    ViewData["Title"] = "Clientes";
}

<h1>CREAR CLIENTES</h1>

<form href="@Url.Action("Clientes","Home")" method="post">
    <p>Nombre</p>
    <input type="text" class="form-control" name="nombre" id="nombre" />
    <p>Identificacion</p>
    <input type="text" class="form-control" name="identificacion" id="identificacion" />
    <br />
    <button class="btn btn-success form-control">Crear</button>
</form>
<hr />

<h1>LISTA CLIENTES</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Identificacion</th>
            <th scope="col">Numero Productos</th>
            <th scope="col">Productos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Identificacion</td>
                <td>@item.NumProductos</td>
                <td><a href="@Url.Action("Productos","Home", new { id = item.IdCliente })">Productos</a></td>
            </tr>
        }
    </tbody>
</table>
